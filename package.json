{
  "name": "net-check",
  "productName": "Network-Status-Check",
  "version": "1.0.8",
  "description": "A desktop app to check the status of a hostname or URL and port.",
  "main": "main.js",
  "repository": "https://github.com/cjerrington/net-check",
  "author": "Clayton Errington",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-wix": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^13.6.6"
  },
  "scripts": {
    "start": "electron-forge start",
    "start-mac": "/Applications/Electron.app/Contents/MacOS/Electron .",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "bootstrap-icons": "^1.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "is-port-reachable": "^3.0.0",
    "is-reachable": "^4.0.0",
    "jquery": ">=3.5.0",
    "moment": "^2.29.1",
    "pkginfo": "^0.4.1",
    "popper.js": "^1.16.1",
    "tether": "^1.4.7"
  },
  "standard": {
    "globals": [
      "$"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./app/icon.ico"
      },
      "electronPackagerConfig": {
        "icon": "./app/icon.ico",
        "asar": true
      },
      "electronWinstallerConfig": {
        "name": "Net Check",
        "noMsi": false,
        "author": "Clayton Errington",
        "exe": "Net-Check.exe",
        "description": "A desktop app to check the status of a hostname or URL and port.",
        "iconUrl": "./app/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "ui": {
              "chooseDirectory": true
            }
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "net-check",
            "icon": "./app/icon.ico",
            "setupIcon": "./app/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ],
          "config": {
            "name": "net-check"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
